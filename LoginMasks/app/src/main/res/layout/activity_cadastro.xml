<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUser"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"
            android:text="Bem vindo"
            android:textAllCaps="true"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Pessoa FÃ­sica"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:textColor="#000"
            android:textAllCaps="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cpf: "
            android:layout_margin="16dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:id="@+id/cpf"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cpf"
            android:id="@+id/edtcpf"
            android:hint="Seu CPF aqui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            android:layout_margin="16dp"
            android:textColor="#000"
            android:id="@+id/nome"
            android:layout_below="@id/cpf"
            android:textSize="18dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nome"
            android:layout_below="@id/cpf"
            android:id="@+id/edtnome"
            android:hint="Seu nome aqui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:id="@+id/email"
            android:layout_below="@id/nome"
            android:layout_margin="16dp"
            android:textColor="#000"
            android:textSize="18dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/email"
            android:id="@+id/edtemail"
            android:layout_below="@id/nome"
            android:hint="Seu email aqui"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:layout_below="@id/email"
            android:id="@+id/butao2"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campos incorretos!"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_below="@id/butao2"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:visibility="invisible"
            android:id="@+id/erro2"/>
    </RelativeLayout>
</LinearLayout>